set positional-arguments := true
set shell := ["bash", "-eu", "-o", "pipefail", "-c"]
set export := true

# ==================================================
# Color Definitions (Must use double escaped \\033)
# ==================================================

PINK  := "\\033[95m"
CYAN  := "\\033[96m"
BOLD  := "\\033[1m"
RESET := "\\033[0m"

